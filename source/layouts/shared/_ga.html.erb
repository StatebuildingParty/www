<script>
$(document).ready(function(){
  $("#support .supprot-link-group li").click(function(){
    gtag('event', $(this).text() + "_tab", {
      'event_category': 'UIEvent'
    });

    fbq('trackCustom', "TabClick", {name: $(this).text() });
  });

  $("#support").on('click', '.support-active button', function(){
    gtag('event', $(this).text() + "_button", {
      'event_category': 'UIEvent'
    });

    fbq('trackCustom', "ButtonClick", {name: $(this).text() });
  });

  var flag_1=false;
  var flag_2=false;
  var flag_3=false;

  $(window).scroll(function() {
    if ($(this).scrollTop() > $(document).height()*0.3 && !flag_1) {
      gtag('event', 'Scroll_30%', {'event_category': 'Scroll' });
      fbq('trackCustom', "Scroll", {progress: '30%' });
      flag_1=true;

    } else if ($(this).scrollTop() > $(document).height()*0.6 && !flag_2) {
      gtag('event', 'Scroll_60%', {'event_category': 'Scroll' });
      fbq('trackCustom', "Scroll", {progress: '60%' });
      flag_2=true;

    } else if ($(this).scrollTop() > $(document).height()*0.9 && !flag_3) {
      gtag('event', 'Scroll_90%', {'event_category': 'Scroll' });
      fbq('trackCustom', "Scroll", {progress: '90%' });
      flag_3=true;
    }
  });
})

</script>